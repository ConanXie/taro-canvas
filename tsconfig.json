{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    // "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/index.ts",
    "src/utils/*",
    "src/components/**/*",
  ]
}
